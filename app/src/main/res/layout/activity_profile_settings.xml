<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_background">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_profile_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/toolbar"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="@dimen/def_margin"
            android:layout_marginRight="@dimen/def_margin"
            android:layout_marginTop="@dimen/def_margin"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_settings_header_address"
                    android:text="Adres wysyłki"
                    android:layout_marginTop="@dimen/def_margin"
                    android:layout_marginLeft="@dimen/def_margin"
                    android:layout_marginRight="@dimen/def_margin"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="@dimen/def_margin"
                    android:layout_marginLeft="@dimen/def_margin"
                    android:layout_marginRight="@dimen/def_margin"
                    android:text="Nie musisz uzupełniać swoich danych jeśli tego nie chcesz. W takim przypadku, użytkownik chcący wysłać Ci książkę zostanie przekierowany do prywatnej rozmowy z Tobą na Wykopie."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_marginTop="@dimen/def_margin"
                    android:layout_marginLeft="@dimen/def_margin"
                    android:layout_marginRight="@dimen/def_margin"
                    android:id="@+id/et_settings_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Imię i nazwisko"/>

                <EditText
                    android:layout_marginTop="@dimen/def_margin"
                    android:layout_marginLeft="@dimen/def_margin"
                    android:layout_marginRight="@dimen/def_margin"
                    android:id="@+id/et_settings_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ulica, nr domu"/>

                <EditText
                    android:layout_marginTop="@dimen/def_margin"
                    android:layout_marginLeft="@dimen/def_margin"
                    android:layout_marginRight="@dimen/def_margin"
                    android:id="@+id/et_settings_postal_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Kod pocztowy"/>

                <EditText
                    android:layout_marginTop="@dimen/def_margin"
                    android:layout_marginLeft="@dimen/def_margin"
                    android:layout_marginRight="@dimen/def_margin"
                    android:id="@+id/et_settings_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Miejscowość"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="pl.hypeapp.wykopolka.ui.fragment.NavigationDrawerFragment"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer"/>

</android.support.v4.widget.DrawerLayout>