<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_added_book"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/iv_book_cover"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/books"/>

        <TextView
            android:id="@+id/tv_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_book_cover"
            android:layout_alignEnd="@+id/iv_book_cover"
            android:layout_below="@id/iv_book_cover"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Awantury na tle powszechnego ciążenia"/>

        <TextView
            android:id="@+id/tv_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_book_cover"
            android:layout_alignEnd="@+id/iv_book_cover"
            android:layout_below="@id/tv_book_title"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="~Tomasz Lem"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
